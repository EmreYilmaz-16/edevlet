<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_inherit_profile_type" model="ir.ui.view">
        <field name="name">account.move.form.inherit.profile.type</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_download_invoice_xml"
                        type="object"
                        string="Faturaya XML Oluştur"
                        class="btn-primary"
                        invisible="move_type not in ('out_invoice', 'out_refund')"/>
                <button name="action_preview_invoice_xml"
                        type="object"
                        string="Faturayı XML Önizle"
                        class="btn-secondary"
                        invisible="move_type not in ('out_invoice', 'out_refund')"/>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="profile_type"
                       modifiers="{'required': [('move_type', 'in', ['out_invoice', 'out_refund'])]}"/>
                <field name="invoice_type_code"
                       modifiers="{'required': [('move_type', 'in', ['out_invoice', 'out_refund'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>
