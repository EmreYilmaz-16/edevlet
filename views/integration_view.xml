<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_edevlet_integration_list" model="ir.ui.view">
        <field name="name">edevlet.integration.list</field>
        <field name="model">edevlet.integration</field>
        <field name="arch" type="xml">
            <list string="E-Devlet Entegrasyonları">
                <field name="type"/>
                <field name="company_code"/>
                <field name="sirket_kodu"/>
                <field name="api_user_name"/>
                <field name="web_service_url"/>
                <field name="prefix"/>
                <field name="ubl_version"/>
                <field name="customization_id"/>
                <field name="template_file_name"/>
                <field name="xslt_file_name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_edevlet_integration_form" model="ir.ui.view">
        <field name="name">edevlet.integration.form</field>
        <field name="model">edevlet.integration</field>
        <field name="arch" type="xml">
            <form string="E-Devlet Entegrasyon Detayı">
                <header>
                    <button name="action_import_taxpayer_list"
                            string="Mükellefleri Getir"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_import_all_taxpayer_list"
                            string="Tüm Mükellefleri Getir"
                            type="object"/>
                    <button name="action_check_customer_tax_id"
                            string="Mükelleflik Kontrolü"
                            type="object"
                            class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="company_code"/>
                            <field name="sirket_kodu"/>
                            <field name="api_user_name"/>
                            <field name="api_password" password="True"/>
                            <field name="web_service_url"/>
                        </group>
                        <group>
                            <field name="prefix"/>
                            <field name="ubl_version"/>
                            <field name="customization_id"/>
                            <field name="template_file_name"/>
                            <field name="xslt_file_name"/>
                            <field name="xslt_file" filename="xslt_file_name"/>
                        </group>
                    </group>
                    <group>
                        <field name="taxpayer_check_tax_id"/>
                        <field name="taxpayer_check_result" widget="text" readonly="1"/>
                    </group>
                    <group>
                        <field name="xslt_base64" widget="text" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_edevlet_integration" model="ir.actions.act_window">
        <field name="name">E-Devlet Entegrasyonları</field>
        <field name="res_model">edevlet.integration</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Yeni bir E-Devlet entegrasyonu ekleyin
            </p>
            <p>
                E-Fatura, E-Arşiv ve E-İrsaliye entegrasyonlarını buradan yönetebilirsiniz.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_edevlet_root"
              name="E-Devlet"
              sequence="10"/>

    <menuitem id="menu_edevlet_integration"
              name="Entegrasyonlar"
              parent="menu_edevlet_root"
              action="action_edevlet_integration"
              sequence="10"/>
</odoo>
